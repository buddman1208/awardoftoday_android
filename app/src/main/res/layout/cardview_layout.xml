<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cardview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    cardview:cardElevation="3dp"
    android:background="#aa0000"
    cardview:cardCornerRadius="10dp"
    android:layout_margin="10dp"
    cardview:cardUseCompatPadding="true"
    cardview:cardPreventCornerOverlap="false">
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:weightSum="3"
        android:orientation="vertical"
        android:background="#5fc29c">
        <RelativeLayout
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="2">
            <LinearLayout
                android:id="@+id/left_layout"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/card_title"
                    android:textStyle="bold"
                    android:textColor="#FFF"
                    android:textSize="20dp"
                    android:text="독후감쓰기"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/card_description"
                    android:layout_marginTop="5dp"
                    android:textColor="#ADCBBE"
                    android:textSize="12dp"
                    android:text="2시간 30분 남았어요."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_alignBottom="@+id/left_layout"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/ic_prize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/card_reward"
                    android:layout_gravity="center_vertical"
                    android:textSize="15dp"
                    android:textColor="#FFF"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2개"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFF"
            android:layout_weight="1">
            <TextView
                android:layout_centerVertical="true"
                android:text="미리 알려주기"
                android:textSize="14dp"
                android:textColor="#B6B6B6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <com.rey.material.widget.Switch
                style="@style/Material.Widget.Switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/card_switch"
                android:gravity="center"
                android:checked="false"/>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>